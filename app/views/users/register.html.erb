<div class="box dm-form">
	<div class="content is-little">
		<h1 class="dm-form-h1"> Register </h1>
	</div>
	<%= form_tag "/register", method: :post do %>
	<div class="field">
		<label class="label">Username</label>
		<p class="control has-icons-left has-icons-right">
		<input class="input" type="name" name="name" placeholder="Username">
		<span class="icon is-small is-left">
			<i class="fas fa-envelope"></i>
		</span>
		</p>
	</div>
	<div class="field">
		<label class="label">Password</label>
		<p class="control has-icons-left">
			<input class="input" type="password" name="passwd" placeholder="Password">
			<span class="icon is-small is-left">
				<i class="fas fa-lock"></i>
			</span>
		</p>
	</div>
	<div class="field">
		<label class="label">Password</label>
		<p class="control has-icons-left">
			<input class="input" type="password" name="repeat" placeholder="Password">
			<span class="icon is-small is-left">
				<i class="fas fa-lock"></i>
			</span>
		</p>
	</div>
	<div class="field">
		<button class="button is-success is-fullwidth" type="submit"> Register </button>
	</div>
	<% end %>
</div>
<% @users.each do |user| %>
  <p> <%= user.name %> </p>
<% end %>
