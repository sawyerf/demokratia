<!DOCTYPE html>
<html>
	<head>
		<title>Demokratia</title>
		<%= csrf_meta_tags %>
		<%= csp_meta_tag %>
		<meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.7.5/css/bulma.min.css">
    <script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"></script>
		<%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
		<%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
	</head>

	<body>
<nav class="navbar is-light" role="navigation" aria-label="main navigation">
	<div class="navbar-brand">
		<a class="navbar-item" href="/">
		<strong> Demokratia </strong>
		</a>
		<% if not @current_user %>
			<div class="navbar-item mobile-buttons">
				<a class="button is-outlined " href="/login"> Sign in </a>
			</div>
		<% end %>
		<a role="button" class="navbar-burger burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
			<span aria-hidden="true"></span>
			<span aria-hidden="true"></span>
			<span aria-hidden="true"></span>
		</a>
	</div>
	<div id="navbarBasicExample" class="navbar-menu">
		<div class="navbar-start">
			<a class="navbar-item" href="/"> Home </a>
			<a class="navbar-item" href="/votes"> Vote </a>
		</div>
		<div class="navbar-end">
			<div class="navbar-item">
		<% if @current_user %>
			<p> <%= @current_user.name %> <p>
			<div class="buttons">
				<a class="button is-primary" href="/disconnect"> disconnect </a>
			</div>
		<% else %>
			<div class="buttons">
				<a class="button is-light" href="/login"> Sign in </a>
				<a class="button is-primary" href="/register"> <strong>Sign up</strong> </a>
			</div>
		<% end %>
			</div>
		</div>
	</div>
</nav>
		<% if flash[:success] %> <div class="notification is-success dm-alert"> <%= flash[:success] %> </div> <% end %>
		<% if flash[:fail] %> <div class="notification is-danger dm-alert"> <%= flash[:fail] %> </div> <% end %>
		<%= yield %>
	</body>
</html>
